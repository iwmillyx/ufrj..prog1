#include <stdio.h>

int main() {
    
    int num1, num2, soma, subtracao, multiplicacao, divisao;
    char opcao;
    
    do {
        printf("========== BEM-VINDA A CALCULADORA DA EMILLY ==========\n");
        printf(" [1] - Somar\n");
        printf(" [2] - Diminuir\n");
        printf(" [3] - Multiplicação\n");
        printf(" [4] - Divisão\n");
        printf(" [5] - Encerrar a calculadora\n");
        printf("\nInforme qual opção vc irá escolher: ");
        scanf("%c", &opcao);
            if(opcao == '1'){
                printf("\n(*)Digite o primeiro número para somar: ");
                scanf("%i", &num1);
                printf("(*)Digite o segundo número para somar: ");
                scanf("%i", &num2);
                    soma = num1 + num2;
                printf("\n\tA soma é: %i", soma);
            }else{
                if(opcao == '2'){
                    printf("\n(*)Digite o primeiro número para subtração: ");
                    scanf("%i", &num1);
                    printf("(*)Digite o segundo número para subtração: ");
                    scanf("%i", &num2);
                        subtracao = num1 - num2;
                    printf("\n\tA subtração é: %i", subtracao);
                }else{
                    if(opcao == '3'){
                    printf("\n(*)Digite o primeiro número para multiplicar: ");
                    scanf("%i", &num1);
                    printf("(*)Digite o segundo número para multiplicar: ");
                    scanf("%i", &num2);
                        multiplicacao = num1 * num2;
                    printf("\n\tA multiplicação é: %i", multiplicacao);
                    }else{
                        if(opcao == '4'){
                        printf("\n(*)Digite o primeiro número para dividir: ");
                        scanf("%i", &num1);
                        printf("(*)Digite o segundo número para dividir: ");
                        scanf("%i", &num2);
                            divisao = num1 / num2;
                        printf("\n\tA divisão é: %i", divisao);
                    }else{
                        if(opcao == '5');
                        printf("\n\tCALCULADORA ENCERRADA");
                    }
                }
            }
        }
            
        } while( opcao = 0);
        return 0;
}
